<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="keyword"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_default">
        
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/fg_search_none_tab_none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabTextAppearance="@style/Body_large_medium"
            app:tabBackground="@color/bg_default"
            app:tabTextColor="@color/selector_tv_tab_selected"
            app:tabIndicatorColor="@color/icon_default"
            app:tabIndicatorFullWidth="false"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="운동인증" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="핏사이트" />

        </com.google.android.material.tabs.TabLayout>

        <TextView
            android:id="@+id/fg_search_none_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/search_none_title(keyword)}"
            android:textAppearance="@style/Body_large_medium"
            android:textColor="@color/text_default"
            android:includeFontPadding="false"
            android:layout_marginTop="130dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fg_search_none_tab_none" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_none_notice"
            android:textColor="@color/text_sub02"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/fg_search_none_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
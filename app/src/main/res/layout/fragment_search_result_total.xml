<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_default">

        <TextView
            android:id="@+id/fg_search_result_total_tv_certificate_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/common_certificate"
            android:textColor="@color/text_sub01"
            android:textAppearance="@style/Title_large_semibold"
            android:includeFontPadding="false"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/common_see_more"
            android:textColor="@color/text_sub02"
            android:layout_marginEnd="20dp"
            android:textAppearance="@style/Body_medium_regular"
            app:layout_constraintTop_toTopOf="@id/fg_search_result_total_tv_certificate_title"
            app:layout_constraintBottom_toBottomOf="@id/fg_search_result_total_tv_certificate_title"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fg_search_result_rv_certificate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingStart="20dp"
            android:clipToPadding="false"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@id/fg_search_result_total_tv_certificate_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
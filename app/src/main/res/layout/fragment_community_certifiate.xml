<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="fragment"
            type="com.proteam.fithub.presentation.ui.main.community.certificate.CertificateFragment" />

        <variable
            name="viewModel"
            type="com.proteam.fithub.presentation.ui.main.community.viewmodel.CommunityViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <HorizontalScrollView
            android:id="@+id/fg_community_certificate_layout_exercise_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:fillViewport="true"
            android:nestedScrollingEnabled="true"
            android:overScrollMode="never"
            android:paddingHorizontal="20dp"
            android:paddingTop="15dp"
            android:scrollbars="none"
            app:layout_constrainedHeight="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/fg_community_certificate_chipgroup_exercise_filter"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </HorizontalScrollView>

        <TextView
            android:id="@+id/fg_community_certificate_tv_sort_popular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/pretendard_medium"
            android:includeFontPadding="false"
            android:lineHeight="16dp"
            android:onClick="@{() -> viewModel.changeRecentSort(false)}"
            android:text="@string/community_sort_popular"
            android:textColor='@{viewModel.isRecentSort() == true ? @color/text_sub02 : @color/text_default}'
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fg_community_certificate_layout_exercise_filter" />

        <View
            android:id="@+id/fg_community_certificate_view_sort_divider"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginVertical="1dp"
            android:layout_marginEnd="7dp"
            android:background="@color/icon_disabled"
            app:layout_constraintBottom_toBottomOf="@id/fg_community_certificate_tv_sort_popular"
            app:layout_constraintEnd_toStartOf="@id/fg_community_certificate_tv_sort_popular"
            app:layout_constraintTop_toTopOf="@id/fg_community_certificate_tv_sort_popular" />

        <TextView
            android:id="@+id/fg_community_certificate_tv_sort_recent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="7dp"
            android:fontFamily="@font/pretendard_medium"
            android:includeFontPadding="false"
            android:lineHeight="16dp"
            android:onClick="@{() -> viewModel.changeRecentSort(true)}"
            android:text="@string/community_sort_recent"
            android:textColor='@{viewModel.isRecentSort() == true ? @color/text_default : @color/text_sub02}'
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/fg_community_certificate_tv_sort_popular"
            app:layout_constraintEnd_toStartOf="@id/fg_community_certificate_view_sort_divider"
            app:layout_constraintTop_toTopOf="@id/fg_community_certificate_tv_sort_popular" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fg_community_certificate_rv_certificates"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="17.5dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fg_community_certificate_tv_sort_recent"
            app:spanCount="2"
            tools:listitem="@layout/item_rv_exercise_certificate" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
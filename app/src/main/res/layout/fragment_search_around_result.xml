<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="fragment"
            type="com.proteam.fithub.presentation.ui.search.around.result.list.SearchAroundResultFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_default">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fg_search_around_result_rv_contents"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/btn_search_around_result_see_map"
            android:drawableStart="@drawable/ic_location_search_around_result"
            android:drawablePadding="4dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"
            android:onClick="@{() -> fragment.onOpenMapClicked()}"
            android:text="@string/around_see_map"
            android:textColor="@color/text_main_btn"
            android:textAppearance="@style/Body_small_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>